#!/bin/zsh
emulate -L zsh; setopt extendedglob warncreateglobal

if ! zle .undo && [[ -z $BUFFER && ZLE_RECURSIVE -eq 0 ]]; then
  case $CONTEXT in
    start )
      local reply
      hist -fs d -1
      LBUFFER+=$reply[2]
      UNDO_LIMIT_NO=$UNDO_CHANGE_NO
      ;;
    cont )
      zle .push-line-or-edit
      ;;
  esac
fi
